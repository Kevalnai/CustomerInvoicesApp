@model CustomerInvoicesAppLibrary.Models.Invoice

<h2>Add Invoice</h2>

<form asp-action="AddInvoice" method="post">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />

    <div class="form-group">
        <label asp-for="InvoiceDate"></label>
        <input asp-for="InvoiceDate" class="form-control" type="date" />
        <span asp-validation-for="InvoiceDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentTermsId"></label>
        <select asp-for="PaymentTermsId" class="form-control">
            <option value="">Select Payment Terms</option>
            @foreach (var term in ViewBag.PaymentTerms as List<CustomerInvoicesAppLibrary.Models.PaymentTerms>)
            {
                <option value="@term.PaymentTermsId">@term.Description</option>
            }
        </select>
        <span asp-validation-for="PaymentTermsId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentTotal"></label>
        <input asp-for="PaymentTotal" class="form-control" />
        <span asp-validation-for="PaymentTotal" class="text-danger"></span>
    
    </div>

        <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
